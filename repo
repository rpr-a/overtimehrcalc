<body>
  <h2>Thruway OT Calculator</h2>
  <label>Hourly Pay ($):
    <input type="number" id="payRate" value="33.92" step="0.01">
  </label>

  <label>Overtime Hours:
    <input type="number" id="otHours" value="0">
  </label>

  <label>Tax Rate (%):
    <input type="number" id="taxRate" value="28" step="0.01">
  </label>

  <label>
    <input type="checkbox" id="includeMealPay"> Include Meal Pay ($13.85 per 8hr shift)
  </label>

  <button onclick="calculateTakeHome()">Calculate</button>

  <div class="result" id="result"></div>

  <script>
    function calculateTakeHome() {
      const rate = parseFloat(document.getElementById('payRate').value);
      const otHours = parseFloat(document.getElementById('otHours').value);
      const taxRate = parseFloat(document.getElementById('taxRate').value) / 100;
      const includeMeal = document.getElementById('includeMealPay').checked;

      const overtimePay = otHours * rate * 1.5;
      const mealUnits = Math.floor(otHours / 8);
      const mealPay = includeMeal ? mealUnits * 13.85 : 0;

      const gross = overtimePay + mealPay;
      const net = gross * (1 - taxRate);

      document.getElementById('result').innerText = `Take-home Pay: $${net.toFixed(2)} (Gross: $${gross.toFixed(2)})`;
    }
  </script>
